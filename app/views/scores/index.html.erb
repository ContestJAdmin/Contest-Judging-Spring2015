<%= button_to 'Back', 'javascript:history.go(-1);' %>
<h1>Score Chart</h1>

<div class="panel-collapse">
  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <% @projects_scores.each do |project_id, score| %>
      <% project = @projects.find(project_id) %>
      <% puts project.inspect %>
      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingOne<%= project_id %>">
          <a class="panel-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseOne<%= project_id %>" aria-expanded="false" aria-controls="collapseOne<%= project_id %>">
            <%= project.name %>
            <h6 align="right"> Total Score: <%= score.round(2) %></h6>
          </a>
        </div>
        <div id="collapseOne<%= project_id %>" class="panel-collapse collapse <%= params[:expand_about] ? 'in' : '' %>" role="tabpanel" aria-labelledby="headingOne<%= project_id %>">
          <div class="panel-body">
            <table class="table table-striped">
              <tr>
                <th>Question Type</th>
                <th>Question Type Weight</th>
                <th>Averaged Score</th>
                <th></th>
              </tr>
              <% @question_types.each do |question_type| %>
              <tr>
                <td> <%= question_type.question_type %></td>
                <td> <%= question_type.weight %>%</td>
                <td> <%= @projects_question_type_scores[project_id][question_type.id] %></td>
              </tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<p>
  Download scores as: 
  <%= link_to "CSV", contest_scores_path(@contest, format: "csv") %> | 
  <%= link_to "Excel", contest_scores_path(@contest, format: "xls") %>
</p>
