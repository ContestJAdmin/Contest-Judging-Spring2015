<h3>Judges</h3>
<p>Name: <%= @user.name if @user.name %></p>
<p>Email: <%= @user.email if @user.email %></p>

<p>
<%= form_for @user  do |f| %>
<% for project in Project.all %>  
    <div>  
      <%= check_box_tag "user[project_ids][]", project.id, @user.projects.include?(project) %>  
      <%= project.name %>  
    </div>  
<% end %>
<% if @user.projects.length > 0 %>
  <%= f.submit 'Update' %>
<% end %>  
</p>
<% end %>



